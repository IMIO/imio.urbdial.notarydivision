<metal:observation_macro define-macro="comments">
    <tal:comments repeat="comment view/get_comments">

        <strong><div tal:content="comment/full_title"></div></strong>
        <span tal:condition="python: not comment.text" class="discreet">N.C</span>
        <tal:text tal:condition="python: comment.text">
            <tal:content replace="structure python: comment.text.raw_encoded" />
        </tal:text>

        <table tal:define="view python:comment.restrictedTraverse('view')">
            <tr>
                <td width="10px"></td>
                <td><metal:observation use-macro="here/@@comments_display/comments" /></td>
            </tr>
        </table>

    </tal:comments>
</metal:observation_macro>
